# options
set -o emacs
bind ^l=clear-screen
bind -m ^xd="$(date +'%Y-%m-%d')"

# history
HISTFILE=~/.histfile
HISTSIZE=10000
SAVEHIST=10000

# path
ffmpeg="/c/Users/$USER/ffmpeg/bin"
firefox="/c/Users/$USER/firefox"
pandoc="/c/Users/$USER/pandoc"
scripts="$HOME/scripts"
sumatra_pdf="/c/Users/$USER/sumatra-pdf"
texlive="/c/Users/$USER/texlive/2021/bin/win32"
export PATH=".:$ffmpeg:$firefox:$pandoc:$scripts:$sumatra_pdf:$texlive:$PATH"

# other variables
export BROWSER='/opt/firefox/firefox.exe'
export CHERE_INVOKING=1 
export EDITOR=/usr/bin/vim
export TERM=xterm-256color
export dl="/c/Users/$USER/Downloads"
export up="/c/Users/$USER"

# PS1
PS1=$'\$(x=\$?; (( \$x )) && printf "\1\e[1;31m:( \$x\n\1\e[0m")
\1\e[1;30m\$PWD/\1\e[0m
\1\e[1;30m$\1\e[0m '

# aliases
alias bgg='do-in-background '
alias R='r-wrapper'
alias bak='backup-file'
alias cdd="source $HOME/scripts/go-to-drive"
alias cdl="source $HOME/scripts/go-to-local"
alias cdr="source $HOME/scripts/go-to-remote"
alias dot='git --git-dir=$HOME/.dot.git/ --work-tree=$HOME'
alias dott='add-commit-push-dot'
alias gitt='add-commit-push'
alias kb='show-key-bindings'
alias krc='vim ~/.mkshrc; . ~/.mkshrc'
alias l1='ls -1F'
alias la='ls -AlhF'
alias laa='ls -AlhFd .*'
alias ll='ls -lhF'
alias mvv='batch-rename'
alias sshr='ssh root@192.168.1.1'
alias pdf='sumatrapdf'
alias pdff='markdown-to-pdf'
alias play='ffplay'
alias ranger='source /usr/bin/ranger'
alias reboot='cmd //c "shutdown /r /t 0"'
alias shutdown='cmd //c "shutdown /s /t 0"'
alias tp='move-to-trash'
alias trc='vim ~/.tmux.conf; tmux source-file ~/.tmux.conf'
alias ubak='restore-file'
alias focus='play-sounds'
alias start='start-wrapper'

# start tmux
if [ -z "$TMUX" ]
then
    tmux
fi
