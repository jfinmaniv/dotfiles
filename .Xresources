! light bg
! black 
*color0:  #000000
*color8:  #808080
! red 
*color1:  #800000
*color9:  #ff0000
! green 
*color2:  #008000
*color10: #00ff00
! brown/yellow 
*color3:  #808000
*color11: #ffff00
! blue 
*color4:  #000080
*color12: #0000ff
! magenta 
*color5:  #800080
*color13: #ff00ff
! cyan 
*color6:  #008080
*color14: #00ffff
! gray/white
*color7:  #c0c0c0
*color15: #ffffff

*foreground: #000000
*background: #ffffff

! *cursorUnderLine: true
*cursorBlink: true
*cursorOffTime: 500
*cursorOnTime: 500
*cursorColor: #ff00ff

! *colorInnerBorder: true
*termName: xterm-256color

*faceName: xft:Terminus:size=20:weight=bold

*scrollBar: false

! The following two settings may be specific to xterm.
! As it sounds. allows for emacs bindings in terminal.  
*metaSendsEscape: true
! Allows for expected Delete behavior of deleting character in front of
! cursor.
*deleteIsDEL: false
! cancels xterms m-enter fullscreen keybinding
*omitTranslation: fullscreen
! for copy/paste
*selectToClipboard: true
